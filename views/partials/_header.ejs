<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(username) { %>
      <h5> Logged in as: <%= username %>!</h5>
      <form class="form-inline" action="/logout" method="POST">
      <div class="form-group mb-2">
    <button style="margin-left: 15px; margin-top: 10pix;" type="submit" class="btn btn-outline-dark">Logout</button>
      </div> 
    </form>
    <%} else {%>
    <form id="form" class="form-inline"  method="POST"  action="/login">
      <div class="form-group mb-2">
        <input 
          class="form-control mr-sm-2" 
          type="text"
          name="username" 
          placeholder="Username" 
          style="width: 150px; margin: 1em">
        <button type="submit" class="btn btn-outline-dark">Login</button>
      </div>
    </form>
  <%} %>
  </nav>
</header>
        
       
